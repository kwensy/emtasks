<h3>New Task</h3>
<form>
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" value=
    model.title placeholder="Add Task..."}}
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{input type="date" class="form-control" value=displayedDate}}
  </div>
   <div class="form-group">
    <label>Description</label>
    {{textarea class="form-control" value=model.description placeholder="Describe Task..."}}
  </div>
  <button type="submit" {{action 'editTask' model.id}} class="btn btn-primary">Submit</button>
</form>